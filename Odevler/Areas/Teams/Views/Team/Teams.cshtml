@model IEnumerable<Odevler.Models.Player>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<table class="table table-condensed">
    <thead>
        <tr>
            <th>Player</th>
            <th>Team</th>
            <th>Value</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Team.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Value)</td>
                <td> <a asp-action="Edit" asp-route-id="@item.PlayerID" >Edit</a> </td>
                <td><a asp-action="Delete" asp-route-id="@item.PlayerID">Delete</a></td>
            </tr>
        }
    </tbody>
</table>

    <a asp-action="Create" class="btn btn-secondary"> New Player</a>

<div id="partial">
    <partial name="Partials/List" />
</div>